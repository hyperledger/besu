<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="COLOR" class="ch.qos.logback.core.ConsoleAppender">
    <withJansi>true</withJansi>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSZZZ} | %thread | %highlight(%-5level) | %c{0} | %highlight(%msg%n%throwable)</pattern>
    </encoder>
  </appender>
  <appender name="NOCOLOR" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSZZZ} | %thread | %-5level | %c{0} | %msg%n%throwable</pattern>
    </encoder>
  </appender>
  <root level="${LOG_LEVEL:-info}">
    <if condition='isDefined("NO_COLOR")'>
      <then>
        <appender-ref ref="NOCOLOR"/>
      </then>
      <else>
        <appender-ref ref="COLOR"/>
      </else>
    </if>
  </root>
</configuration>